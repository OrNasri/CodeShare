<!-- views/codeblock.ejs -->
<!DOCTYPE html>
<html>
  <head>
    <title>Code Block Page</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/11.2.0/styles/default.min.css">
    <style>
      body {
        font-family: Arial, sans-serif;
        padding: 20px;
      }

      h1 {
        font-size: 24px;
        margin-bottom: 10px;
      }

      pre {
        background-color: #f5f5f5;
        padding: 10px;
      }

      textarea {
        width: 100%;
        height: 200px;
        padding: 10px;
        font-family: Consolas, monospace;
      }

      .mentor-message {
        font-style: italic;
        margin-top: 10px;
      }
    </style>
  </head>
  <body>
    <h1>Code Block: <%= codeBlock.title %></h1>
    <pre><code id="code" class="javascript"><%= codeBlock.code %></code></pre>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/11.2.0/highlight.min.js"></script>
    <script>hljs.highlightAll();</script>
    <script src="/socket.io/socket.io.js"></script>
    <script>
        
      const socket = io();
      socket.emit('joinRoom');

      socket.on('isMentor', isMentor => {
        if (isMentor) {
          const codeInput = document.getElementById('codeInput');
          if (codeInput) {
            codeInput.disabled = true;
          }
        }
      });

      socket.on('codeChange', data => {
        const codeElement = document.getElementById('code');
        if (codeElement) {
            codeElement.innerHTML = data.code;
            hljs.highlightElement(codeElement);
          }
      });
    
     
      document.addEventListener('DOMContentLoaded', () => {
        const codeInput = document.getElementById('codeInput');
         // Retrieve the codeBlock title from the template
        const codeBlockTitle = '<%= codeBlock.title %>';
        if (codeInput) {
          codeInput.addEventListener('input', event => {
            const code = event.target.value;
             // Pass codeBlockTitle as a parameter
            socket.emit('codeChange', { code, codeBlockTitle, isMentor: false });
          });
        }
      });
// Emit the 'isMentor' value from the server to the client
        socket.emit('isMentor', '<%= isMentor %>'); 
        </script>

        <% if (isMentor) { %>
            <div class="mentor-message">
            </div>
          <% } else { %>
            <div>
              <textarea id="codeInput" rows="10" cols="50"><%= codeBlock.code %></textarea>
            </div>
        <% } %>
  </body>
</html>